{
    "compilerOptions": {
        "target": "ES2015",
        "module": "CommonJs",
        "moduleResolution": "node",
        "strict": false,
        "noUnusedLocals": false,
        "noImplicitAny": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "skipLibCheck": true
    },
    "files": ["types.d.ts"],
    "include": [
        "src/*"
    ],
    "exclude": [
        "./node_modules/"
    ]
}